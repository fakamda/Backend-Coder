<h1 class="text-white mb-4">Log in</h1>

  <div class="row register-container">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark">
        <div class="card-header text-white">
          Login
        </div>
        
        <img src="/assets/login.png" alt="user-img" class="rounded-circle mx-auto d-block m-4 login-img">

        <div class="card-body">
          <form action="/session/login" method="post">
            <div class="form-group">
              <input type="email" class="form-control mb-4" name="email" placeholder="Email" required>
            </div>
            <div class="form-group">
              <input type="password" class="form-control mb-4" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
               <a href="/session/forget-password">Olvidé mi contraseña</a><br><br> 
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-success btn-block">Login</button>
              <a class="btn btn-dark gh-btn" href="/session/github">Login with GitHub <i class="fa-brands fa-github gh-logo"></i></a>
            </div>  
          </form>